<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D3281B"
    tools:context=".FirstscreenActivity">

    <TextView
        android:id="@+id/textView10"
        android:layout_width="295dp"
        android:layout_height="105dp"
        android:background="#FFEB3B"
        android:fontFamily="sans-serif-smallcaps"
        android:paddingTop="10sp"
        android:text="Let's Start by knowing who you are"
        android:textSize="28sp"
        app:layout_constraintBottom_toTopOf="@+id/patlogin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/patlogin"
        android:layout_width="195dp"
        android:layout_height="107dp"
        android:fontFamily="sans-serif-smallcaps"
        android:includeFontPadding="true"
        android:text="Patient"
        android:textColor="@android:color/holo_green_dark"
        android:textSize="24sp"
        app:backgroundTint="#00BCD4"
        app:layout_constraintBottom_toTopOf="@+id/doclogin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView10" />

    <Button
        android:id="@+id/doclogin"
        android:layout_width="192dp"
        android:layout_height="87dp"
        android:layout_marginBottom="148dp"
        android:fontFamily="serif"
        android:text="Doctor"
        android:textColor="@android:color/holo_green_dark"
        android:textSize="24sp"
        app:backgroundTint="#00BCD4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>